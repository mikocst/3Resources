---
import ThreeJSComponent from "../components/ThreeJSComponent.astro";
import { fetchResources } from "../lib/contentful";
import ResourceCard from "../components/ResourceCard.astro";
import Navbar from "../components/Navbar.astro";
import '../styles/global.css';

const resource = await fetchResources();
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300..900;1,300..900&display=swap" rel="stylesheet">
		<title>Three Resources</title>

		<style>
			.container-hero {
				display: flex;
				justify-content: flex-start;
				align-items: center;
				width: 90%;
			}

			#resources {
				height: auto;
			}

			.resource-wrapper {
				background-color: #99C1F6;
				padding: 16px;
			}

			.resource-grid {
      			display: grid;
				width: 100%;
				grid-template-columns: 2fr 2fr 2fr;
      			gap: 16px;
    		}

			.sort-menu {
				width: 10%;
				background-color: rgb(208, 224, 238);
				padding-top: 1rem;
				padding-bottom: 1rem;
			}

			.sort-context {
				position: sticky;
				top: 30rem;
			}

			.sort-header {
				font-size: 1.5rem;
				font-weight: 500;
				text-align: center;
			}

			.sort-btn-wrap {
				display: flex;
				flex-direction: column;
				padding-left: 1rem;
				padding-right: 1rem;
			}

			.sort-btn-wrap * {
				margin-top: 0.25rem;
				margin-bottom: 0.25rem;
			}
		</style>
	</head>
	<body>
		<main>
			<Navbar/>
			<section>
				<ThreeJSComponent/>
				<div class = "container-hero">
					<div class = "hero-wrapper">
						<h1>Curated Resources for 3D Design and Development</h1>
				<p>
					Embark on your exciting journey into the world of 3D art and development with a curated list
					of resources and inspiring creatives. Discover even more tools and tips to elevate your skills! 
				</p>
					</div>	
				</div>
			</section>

			<section id = resources>
				<div class = "sort-menu">
					<div class = "sort-context">
					<p class = "sort-header">Sort By</p>
					<div class = "sort-btn-wrap">
					<button>All Resources</button>
					<button>Tools</button>
					<button>YT Channels</button>
					<button>Twitters</button>
					<button>Learning</button>
					</div>
					</div>
				</div>
				<div class = "resource-wrapper">
					<h2>Welcome to the Library</h2>
					<div class = "resource-grid">
						{resource.map((resource) => (
							<ResourceCard
							  key={resource.id}
							  title={resource.title}
							  tag={resource.tag}
							  description={resource.description}
							  image={resource.image}
							/>
						  ))}
				</div>
			</section>

			<section>
				
			</section>
		</main>
	</body>
</html>
